<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	<TargetFramework>netstandard2.1</TargetFramework>
	<AssemblyName>TestingUtils</AssemblyName>
	<Description>Utilities to help devs test their mods in game</Description>
	<Version>1.0.0</Version>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
	<PackageReference Include="BepInEx.IL2CPP" Version="6.0.0-*" IncludeAssets="compile" />
	<PackageReference Include="BepInEx.PluginInfoProps" Version="1.*" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Pug.Core">
			<HintPath>.\libs\Pug.Core.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<Reference Include="UnityEngine.CoreModule">
			<HintPath>.\libs\UnityEngine.CoreModule.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Unity.Mathematics">
			<HintPath>.\libs\Unity.Mathematics.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Il2Cppmscorlib">
			<HintPath>.\libs\Il2Cppmscorlib.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<Reference Include="CoreLib">
			<HintPath>.\libs\CoreLib.dll</HintPath>
		</Reference>
	</ItemGroup>
</Project>
